#Declare variable for all base form
decimal = 16
binary = 0b0011
octal = 0o1265
hexadecimal = 0x25FACE

#Print all forms in decimal as python output will always come in decimal values
print("decimal value:", decimal)
print("binary value to decimal:", binary)
print("Octal value to decimal:", octal)
print("hexadecimal value to decimal:", hexadecimal)


#Convert all the form to binary value using funtion
print("Convert decimal to binary:",bin(decimal))
print("Convert octal to binary:",bin(octal))
print("convert hexadecimal to binarty", bin(hexadecimal))

#convert all the form to octal value using funtion
print("convert decimal to octal:", oct(decimal))
print("convert binary to octal:", oct(binary))
print("convert hexadecimal to octal", oct(hexadecimal))

#convert all the form to hexadecimal value using function
print("convert decimal to hexa:", hex(decimal))
print("convert binary to hexa:", hex(binary))
print("convert octal to hexa:", hex(octal))





